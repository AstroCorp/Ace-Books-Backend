{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"entryFile": "infrastructure/app/main",
	"compilerOptions": {
		"assets": ["**/*.svg", "**/*.png", "**/*.twig", "**/*.css"],
		"deleteOutDir": true,
		"typeCheck": true,
		"watchAssets": true
	}
}

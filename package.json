		"@nestjs/schematics": "^10.1.4",
		"@nestjs/testing": "^10.4.3",
		"@types/node": "^22.5.5",
		"@types/nodemailer": "^6.4.16",
		"@types/passport-local": "^1.0.38",
		"source-map-support": "^0.5.21",
		"tailwindcss": "^3.4.12",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.6.2"
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/orm/mikro-orm.config.ts",
			"./dist/orm/mikro-orm.config.js"
		]
	}

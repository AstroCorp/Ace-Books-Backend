{
	"name": "ace-books-backend",
	"version": "1.0.0",
	"description": "AceBooks API",
	"author": "AstroCorp",
	"license": "MIT",
	"scripts": {
		"clean": "rm -rf node_modules/ && rm yarn.lock && yarn cache clean && yarn install",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint . --ext .ts",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:e2e": "jest --config ./jest-e2e.json",
		"webpack": "webpack --config webpack.config.js",
		"prestart:prod": "rimraf dist && tsc",
		"start": "ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "nodemon",
		"start:debug": "nodemon --config nodemon-debug.json",
		"start:prod": "node dist/main.js",
		"start:hmr": "node dist/server",
		"reset-db": "npx mikro-orm schema:drop -r && npx mikro-orm schema:create -r && npx mikro-orm database:import ./src/orm/seeds/base.sql",
		"copy-db": "yes | cp -rf ./db.example.sqlite3 ./db.sqlite3"
	},
	"dependencies": {
		"@mikro-orm/core": "^4.5.6",
		"@mikro-orm/nestjs": "^4.2.0",
		"@mikro-orm/sql-highlighter": "^1.0.1",
		"@mikro-orm/sqlite": "^4.5.6",
		"@nestjs-modules/mailer": "^1.6.0",
		"@nestjs/common": "^7.6.17",
		"@nestjs/config": "^0.6.3",
		"@nestjs/core": "^7.6.17",
		"@nestjs/jwt": "^7.2.0",
		"@nestjs/passport": "^7.1.5",
		"@nestjs/platform-express": "^7.6.17",
		"@nestjs/schedule": "^0.4.3",
		"@nestjs/swagger": "^4.8.0",
		"bcrypt": "^5.0.1",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"date-fns": "^2.22.1",
		"express-rate-limit": "^5.2.6",
		"helmet": "^4.6.0",
		"nodemailer": "^6.6.1",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.6.7",
		"swagger-ui-express": "^4.1.6",
		"twing": "^5.0.2",
		"typescript": "^4.3.2"
	},
	"devDependencies": {
		"@mikro-orm/cli": "^4.5.6",
		"@nestjs/testing": "^7.6.17",
		"@types/bcrypt": "^3.0.1",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.12",
		"@types/inline-css": "^0.0.33",
		"@types/jest": "^26.0.22",
		"@types/node": "^15.12.1",
		"@types/passport-jwt": "^3.0.5",
		"@types/passport-local": "^1.0.33",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.26.1",
		"@typescript-eslint/parser": "^4.26.1",
		"eslint": "^7.28.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-jsdoc": "^32.3.4",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"jest": "^26.6.3",
		"nodemon": "^2.0.7",
		"prettier": "^2.3.1",
		"supertest": "^6.1.3",
		"ts-jest": "^26.5.6",
		"ts-loader": "^8.3.0",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"webpack": "^5.41.1",
		"webpack-cli": "^4.7.2",
		"webpack-node-externals": "^2.5.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/orm/mikro-orm.config.ts",
			"./dist/orm/mikro-orm.config.js"
		]
	}
}

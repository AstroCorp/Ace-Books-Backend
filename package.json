	"scripts": {
		"docker": "docker exec -it ace-books-backend-app-1",
		"docker:install": "yarn install && docker exec -it ace-books-backend-app-1 yarn install",
		"docker:add": "yarn add",
		"postdocker:add": "docker exec -it ace-books-backend-app-1 yarn install",
		"docker:remove": "yarn remove",
		"postdocker:remove": "docker exec -it ace-books-backend-app-1 yarn install",
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"tailwind": "npx tailwindcss -i ./src/emails/css/input.css -o ./src/emails/css/output.css --watch",
		"reset-db": "docker exec -it ace-books-backend-app-1 npx mikro-orm migration:fresh --seed"
	},
	"dependencies": {
		"@faker-js/faker": "^9.0.1",
		"@fastify/compress": "^8.0.0",

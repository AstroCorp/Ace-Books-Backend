{
	"name": "ace-books-backend",
	"version": "1.0.0",
	"description": "AceBooks API",
	"author": "AstroCorp",
	"license": "MIT",
	"scripts": {
		"clean": "rm -rf node_modules/ && rm yarn.lock && yarn cache clean && yarn install",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint . --ext .ts",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:e2e": "jest --config ./jest-e2e.json",
		"webpack": "webpack --config webpack.config.js",
		"prestart:prod": "rimraf dist && tsc",
		"start": "ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "nodemon",
		"start:debug": "nodemon --config nodemon-debug.json",
		"start:prod": "node dist/main.js",
		"start:hmr": "node dist/server",
		"reset-db": "npx mikro-orm schema:drop -r && npx mikro-orm schema:create -r && npx mikro-orm database:import ./src/orm/seeds/base.sql"
	},
	"dependencies": {
		"@mikro-orm/core": "^4.5.9",
		"@mikro-orm/mysql": "^4.5.9",
		"@mikro-orm/nestjs": "^4.3.0",
		"@mikro-orm/sql-highlighter": "^1.0.1",
		"@mikro-orm/sqlite": "^4.5.9",
		"@nestjs-modules/mailer": "^1.6.0",
		"@nestjs/common": "^8.0.6",
		"@nestjs/config": "^1.0.1",
		"@nestjs/core": "^8.0.6",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/passport": "^8.0.1",
		"@nestjs/platform-express": "^8.0.6",
		"@nestjs/schedule": "^1.0.1",
		"bcrypt": "^5.0.1",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"date-fns": "^2.23.0",
		"express-rate-limit": "^5.3.0",
		"helmet": "^4.6.0",
		"nodemailer": "^6.6.3",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.3.0",
		"twing": "^5.0.2",
		"typescript": "^4.4.2"
	},
	"devDependencies": {
		"@mikro-orm/cli": "^4.5.9",
		"@nestjs/testing": "^8.0.6",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.13",
		"@types/inline-css": "^3.0.1",
		"@types/jest": "^27.0.1",
		"@types/node": "^16.11.11",
		"@types/passport-jwt": "^3.0.6",
		"@types/passport-local": "^1.0.34",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"eslint": "^7.32.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-jsdoc": "^36.0.8",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"jest": "^27.1.0",
		"nodemon": "^2.0.12",
		"prettier": "^2.3.2",
		"supertest": "^6.1.6",
		"ts-jest": "^27.0.5",
		"ts-loader": "^9.2.5",
		"ts-node": "^10.2.1",
		"tsconfig-paths": "^3.11.0",
		"webpack": "^5.51.1",
		"webpack-cli": "^4.8.0",
		"webpack-node-externals": "^3.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/orm/mikro-orm.config.ts",
			"./dist/orm/mikro-orm.config.js"
		]
	}
}

{
	"name": "ace-books-backend",
	"version": "1.0.0",
	"description": "",
	"author": "Astro_Corp",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"tailwind": "tailwindcss -i ./src/emails/css/input.css -o ./src/emails/css/output.css --watch",
		"reset-db": "mikro-orm migration:fresh --seed",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --config ./src/test/e2e/jest-e2e.json",
		"test:integration": "jest --config ./src/test/integration/jest-integration.json",
		"test:unit": "jest --config ./src/test/unit/jest-unit.json"
	},
	"dependencies": {
		"@css-inline/css-inline": "^0.14.3",
		"@faker-js/faker": "^9.5.1",
		"@fastify/compress": "^8.0.1",
		"@fastify/cookie": "^11.0.2",
		"@fastify/csrf-protection": "^7.0.2",
		"@fastify/helmet": "^13.0.1",
		"@mikro-orm/core": "^6.4.7",
		"@mikro-orm/migrations": "^6.4.7",
		"@mikro-orm/nestjs": "^6.1.1",
		"@mikro-orm/postgresql": "^6.4.7",
		"@mikro-orm/seeder": "^6.4.7",
		"@mikro-orm/sql-highlighter": "^1.0.1",
		"@nestjs/common": "^11.0.11",
		"@nestjs/config": "^4.0.1",
		"@nestjs/core": "^11.0.11",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-fastify": "^11.0.11",
		"@nestjs/schedule": "^5.0.1",
		"@nestjs/throttler": "^6.4.0",
		"@node-rs/argon2": "^2.0.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"fastify": "^5.2.1",
		"luxon": "^3.5.0",
		"nodemailer": "^6.10.0",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"twing": "^6.1.0",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@mikro-orm/cli": "^6.4.7",
		"@nestjs/cli": "^11.0.5",
		"@nestjs/schematics": "^11.0.2",
		"@nestjs/testing": "^11.1.5",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.13.9",
		"@types/nodemailer": "^6.4.17",
		"@types/passport-local": "^1.0.38",
		"@types/supertest": "^6.0.3",
		"jest": "^30.0.4",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.3",
		"tailwindcss": "^3.4.10",
		"ts-jest": "^29.4.0",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.2"
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/infrastructure/orm/mikro-orm.config.ts",
			"./dist/infrastructure/orm/mikro-orm.config.js"
		]
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"testEnvironment": "node"
	}
}

{% extends "./index.twig" %}

{% block title %}
	{{ title }}
{% endblock %}

{% block content %}
    <div class="bg-white my-4 p-10">
    	<h1 class="font-medium mt-0">Welcome!</h1>
    	<p class="mt-4 mb-6 md:mb-4 text-gray-500">
    		Thanks for registering for an account on Ace Books!
    		Before we get started, we just need to confirm that this
    		is you. This is your validation code:
    	</p>
    	<div class="p-2 border-blue-500 border-2 border-solid rounded w-1/2 text-center mx-auto">
    		{{ verificationCode }}
    	</div>
    </div>
{% endblock %}
